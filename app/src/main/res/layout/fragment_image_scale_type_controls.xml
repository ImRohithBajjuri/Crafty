<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageScaleTypeOptionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.rb.crafty.imageControls.ImageScaleTypeControlsFragment">

    <TextView
        android:id="@+id/imageScaleTypeOptionSH"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Scale type"
        android:textColor="@color/deepPurple"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageScaleTypeRecy"
        app:layout_constraintTop_toBottomOf="@id/imageScaleTypeOptionSH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
