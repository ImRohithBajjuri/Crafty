<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/imageCompressionControlsParent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rb.crafty.imageControls.ImageCompressionControls">

    <TextView
        android:id="@+id/imageCompressionOptionSH"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Quality"
        android:textColor="@color/deepPurple"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/imageCompressionOptionText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCompressionOptionSH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="0"
        android:textColor="@color/deepPurple"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/imageCompressionOptionSeek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageCompressionOptionText"
        app:layout_constraintTop_toBottomOf="@id/imageCompressionOptionSH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:max="100"
        android:progress="100"
        android:progressBackgroundTint="@color/deepPurpleLight2"
        android:progressTint="@color/deepPurple"
        android:thumbTint="@color/deepPurple" />

</androidx.constraintlayout.widget.ConstraintLayout>