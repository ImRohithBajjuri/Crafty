<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rb.crafty.imageControls.ImageFiltersControlFragment"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/deepPurple"
        android:id="@+id/imageFiltersControlsLoadingBar"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
       />

    <TextView
        android:id="@+id/imageFiltersControlSH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Image filters"
        android:textColor="@color/deepPurple"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageFiltersControlRecy"/>
</androidx.appcompat.widget.LinearLayoutCompat>