<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.rb.crafty.textControls.TextDepthControlsFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textDepthOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textDepthOptionRadiusSH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Radius"
            android:textColor="@color/deepPurple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDepthOptionRadiusText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionRadiusSH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="0"
            android:textColor="@color/deepPurple"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/textDepthOptionRadiusSeek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textDepthOptionRadiusText"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionRadiusSH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:max="10"
            android:progress="0"
            android:progressBackgroundTint="@color/deepPurpleLight2"
            android:progressTint="@color/deepPurple"
            android:thumbTint="@color/deepPurple" />


        <TextView
            android:id="@+id/textDepthOptionVerticalSH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDepthOptionRadiusSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Vertical direction"
            android:textColor="@color/deepPurple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDepthOptionVerticalText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionVerticalSH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="0"
            android:textColor="@color/deepPurple"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/textDepthOptionVerticalSeek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textDepthOptionVerticalText"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionVerticalSH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:max="200"
            android:progress="100"
            android:progressBackgroundTint="@color/deepPurpleLight2"
            android:progressTint="@color/deepPurple"
            android:thumbTint="@color/deepPurple" />


        <TextView
            android:id="@+id/textDepthOptionHorizontalSH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionVerticalSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Horizontal direction"
            android:textColor="@color/deepPurple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDepthOptionHorizontalText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionHorizontalSH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="0"
            android:textColor="@color/deepPurple"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/textDepthOptionHorizontalSeek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textDepthOptionHorizontalText"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionHorizontalSH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:max="200"
            android:progress="100"
            android:progressBackgroundTint="@color/deepPurpleLight2"
            android:progressTint="@color/deepPurple"
            android:thumbTint="@color/deepPurple" />


        <TextView
            android:id="@+id/textDepthOptionColorSH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionHorizontalSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Depth color"
            android:textColor="@color/deepPurple"
            android:textSize="16sp" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/textDepthOptionColorSH"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/textDepthControlColorCard"
            app:strokeWidth="1dp"
            app:strokeColor="@color/deepPurple">
            <TextView
                android:id="@+id/textDepthOptionColorHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Hex code"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/round_rect_bgr"
                android:backgroundTint="@color/deepPurple"
                android:drawablePadding="5dp"
                android:layout_gravity="bottom|start"/>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
