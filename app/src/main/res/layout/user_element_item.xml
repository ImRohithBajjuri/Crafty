<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/userElementItemParent"
    android:background="@drawable/round_ripple">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/deepPurple3"
        app:cardElevation="0dp"
        android:id="@+id/userElementItemCard"
        app:cardCornerRadius="@dimen/cardCorners"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Element name"
        android:textColor="@color/deepPurple"
        android:textSize="18sp"
        android:id="@+id/userElementItemName"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
       />
</LinearLayout>