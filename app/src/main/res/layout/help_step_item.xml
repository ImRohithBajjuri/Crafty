<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpStepNum"
        android:text="step"
        android:textColor="@color/deepPurple"
        android:textSize="21sp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help text"
        android:id="@+id/helpStepTxt"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/helpStepCard"
        app:cardBackgroundColor="@color/deepPurpleLight"
        app:cardCornerRadius="@dimen/cardCorners"
        app:cardElevation="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/deepPurple">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpStepImg"
            />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>