<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rb.crafty.ProfileActivity"
    android:background="@color/lightGrey"
    android:id="@+id/profileParent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/profileHeaderLayout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_back_30"
                    app:tint="@color/deepPurple"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_ripple"
                    android:contentDescription="Profile Back Button"
                    android:id="@+id/profileBackButton"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/deepPurple"
                    android:textSize="28sp"
                    android:fontFamily="@font/carter_one"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/profileHeader"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your info"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/deepPurple"
                android:id="@+id/profileInfoHeader"
                app:layout_constraintTop_toBottomOf="@id/profileHeaderLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/deepPurpleLight"
                app:cardCornerRadius="@dimen/cardCorners"
                app:cardElevation="0dp"
                android:layout_margin="10dp"
                android:id="@+id/profileSignedOutCard"
                app:layout_constraintTop_toBottomOf="@id/profileInfoHeader">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_signed_out_text"
                    android:textColor="@color/deepPurple"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize= "18sp"
                    android:layout_margin="20dp"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonSize"
                app:cardCornerRadius="@dimen/buttonCorners"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/deepPurple"
                app:layout_constraintTop_toBottomOf="@id/profileSignedOutCard"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/profileSignInButton"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Sign in"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textAllCaps="true"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/login_24dp"
                    android:id="@+id/profileSignInTxt"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/deepPurpleLight"
                app:cardCornerRadius="@dimen/cardCorners"
                app:cardElevation="0dp"
                android:layout_margin="10dp"
                android:id="@+id/profileInfoCard"
                app:layout_constraintTop_toBottomOf="@id/profileInfoHeader"
                android:visibility="gone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/profileSignOut"
                        android:id="@+id/profileInfoImg"
                        android:contentDescription="Profile Photo"
                        android:src="@drawable/person_100"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Profile name"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/deepPurple"
                        android:id="@+id/profileInfoName"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/profileInfoImg"
                        app:layout_constraintBottom_toTopOf="@id/profileInfoContact"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="bottom"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Profile contact"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/deepPurple"
                        android:id="@+id/profileInfoContact"
                        app:layout_constraintStart_toEndOf="@id/profileInfoImg"
                        app:layout_constraintTop_toBottomOf="@id/profileInfoName"
                        app:layout_constraintBottom_toTopOf="@id/profileSignOut"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="top"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/premium_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="15dp"
                        android:id="@+id/premiumUserImg"
                        android:background="@drawable/round_ripple"
                        android:visibility="gone"
                        app:tint="@color/deepPurple" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profileSignOut"
                        android:background="@color/deepPurple"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sign_out_24dp"
                            android:id="@+id/profileSignOutIcon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/profileSignOutText"
                            android:contentDescription="Profile Sign out icon"
                            app:tint="@color/deepPurpleLight"
                            android:clickable="false"
                            android:focusable="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign out"
                            android:textSize="16sp"
                            android:textColor="@color/deepPurpleLight"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="10dp"
                            android:textAllCaps="true"
                            android:textAlignment="center"
                            android:id="@+id/profileSignOutText"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:clickable="false"
                            android:focusable="false"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/profileLibraryHeader"
                android:textSize="16sp"
                android:textColor="@color/deepPurple"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Your library"
                android:visibility="gone"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileLibraryHeader"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/cardCorners"
                android:id="@+id/profileUserLibraryCard"
                android:visibility="gone"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileFavLay"
                        android:background="@drawable/round_ripple"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_favorite_35"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileFavCardImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="Favourite cards"
                            android:id="@+id/profileFavCardTxt"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_semibold"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileHiddenLay"
                        android:background="@drawable/round_ripple"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/invisible_35dp"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileHiddenCardImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="Hidden cards"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/profileHiddenCardTxt"
                            android:fontFamily="@font/open_sans_semibold"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileAddedFontsLay"
                        android:background="@drawable/round_ripple"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_font_35"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileAddedFontsCardImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="Added fonts"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/profileAddedFontsCardTxt"
                            android:fontFamily="@font/open_sans_semibold"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileUserElementsLay"
                        android:background="@drawable/round_ripple"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/element_35dp"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileUserElementsImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="Your elements"
                            android:id="@+id/profileUserElementsTxt"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_semibold"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/cardCorners"
                app:cardElevation="0dp"
                android:id="@+id/profileNativeAdCard"
                app:layout_constraintTop_toBottomOf="@id/profileUserLibraryCard"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                >
                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/profileNativeTemplate"
                    app:gnt_template_type="@layout/gnt_medium_template_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/cardCorners"
                android:id="@+id/profileImportCard"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/profileNativeAdCard"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_ripple"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/import_card_35dp"
                        app:tint="@color/deepPurple"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/profileImportCardImg"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/deepPurpleLight"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/deepPurple"
                        android:textSize="18sp"
                        android:id="@+id/profileImportCardTxt"
                        android:text="Import card"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/open_sans_semibold"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App related"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/deepPurple"
                android:id="@+id/profileAppRelatedHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImportCard"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileAppRelatedHeader"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/cardCorners"
                android:id="@+id/profileAppRelatedCard"
                android:visibility="gone">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileAppSettingsLay"
                        android:background="@drawable/round_ripple"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/round_settings_35"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileAppSettingsCardImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="App settings"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_semibold"
                            android:id="@+id/profileAppSettingsCardTxt"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileHelpLay"
                        android:background="@drawable/round_ripple"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/help_35dp"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileHelpCardImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="Help"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_semibold"
                            android:id="@+id/profileHelpCardTxt"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/profileAboutAppLay"
                        android:background="@drawable/round_ripple"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info_35dp"
                            app:tint="@color/deepPurple"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/deepPurpleLight"
                            android:id="@+id/profileAboutAppCardImg"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepPurple"
                            android:textSize="18sp"
                            android:text="About"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_semibold"
                            android:id="@+id/profileAboutAppCardTxt"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get premium"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/deepPurple"
                android:id="@+id/profileGetPremiumHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileAppRelatedCard"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileGetPremiumCard"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/deepPurpleLight"
                app:layout_constraintTop_toBottomOf="@id/profileGetPremiumHeader"
                android:visibility="gone"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_premium_text"
                    android:textColor="@color/deepPurple"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="20dp"
                    android:textSize="18sp"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonSize"
                app:cardCornerRadius="@dimen/buttonCorners"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/deepPurple"
                app:layout_constraintTop_toBottomOf="@id/profileGetPremiumCard"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/profileGetPremiumButton"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Get premium"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textAllCaps="true"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/premium_24dp"
                    android:id="@+id/profileGetPremiumButtonTxt"/>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="@string/profile_banner"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
